QWidget {
    background-color: #2e3b4e;
    color: #ffffff;
}

QHeaderView::section {
    background-color: #3c4f64;
    color: #ffffff;
    padding: 4px;
    font-weight: bold;
    border: 1px solid #3c4f64;
}

QTableWidget {
    gridline-color: #3c4f64;
}

QPushButton {
    background-color: #4a5a72;
    color: #ffffff;
    border: 1px solid #4a5a72;
    padding: 6px;
}

QPushButton:hover {
    background-color: #5b6c85;
}
